---
import type { HTMLAttributes } from "astro/types"

export interface Props extends HTMLAttributes<"input"> {
    label: string;
    name: string;
}

const { name, label, ...props } = Astro.props
---

<div>
  <label for={label}>{label}</label>
  <input 
    name={name}
    style="width: 100%; margin-top: 0.5rem; padding: 0.8rem 1rem;"
    {...props}
    class:list={["ch-border-secondary ch-padding ch-border-radius", props.class]}
  />
</div>